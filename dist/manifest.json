{
    "manifest_version": 2,
    "name": "Base Chrome Extension",
    "description": "Base Chrome Extension with Grunt, Babel, Browserify, Yarn, and Node configurations.",
    "version": "1.0",
    "permissions": [
        "declarativeContent",
        "tabs"
    ],
    "browser_action": {},
    "incognito": "split",
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
    "background": {
        "scripts": ["js/background-bundle.js"],
        "persistent": true
    }
}
